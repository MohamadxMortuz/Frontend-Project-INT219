          /* Styling the header */
          .header {
            width: 100%;
            background-color: #333;
            color: #fff;
            padding: 20px 0;
          }
          
          /* Styling the container inside the header */
          .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 0 auto; /* Center the container horizontally */
            max-width: 1200px; /* Limit the maximum width of the container */
          }
          
          /* Styling the logo */
          .nav__logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            font-size: 24px; /* Increase logo font size */
          }
          
          .nav__logo i {
            margin-right: 5px;
          }
          
          /* Styling the navigation menu */
          .nav__menu {
            display: flex;
            align-items: center;
          }
          
          /* Styling the list items */
          .nav__list {
            display: flex;
            list-style: none;
          }
          
          .nav__item {
            margin-right: 30px; /* Increase margin between items */
            font-size: 20px; /* Increase font size of items */
          }
          
          /* Styling the links */
          .nav__link {
            text-decoration: none;
            color: #fff;
            transition: color 0.3s ease;
          }
          
          .nav__link:hover {
            color: #f1c40f; /* Change to desired hover color */
          }
          
          /* Styling the close button */
          .nav__close {
            display: none; /* Hidden by default */
            font-size: 24px;
          }
          
          /* Styling the toggle button */
          .nav__toggle{
            font-size: 1.25rem;
            cursor: pointer;
          }
          
          /* Media query for responsive design */
          @media screen and (max-width: 768px) {
            .nav__menu {
              display: none; /* Hide the menu by default on small screens */
              flex-direction: column;
              position: absolute;
              top: 100%;
              left: 0;
              width: 100%;
              background-color: #333;
              padding: 20px 0;
              text-align: center;
            }
          
            .nav__menu.active {
              display: flex; /* Show the menu when active */
            }
          
          
            .nav__close {
              display: block; /* Show the close button */
              cursor: pointer;
              margin-top: 10px; /* Adjust margin top */
            }
          } 
          